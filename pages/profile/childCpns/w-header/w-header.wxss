.header {
  display: flex;
  background-color: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #ffffff;
  position: relative;
}
.avatar image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #f2f2f2;
}
.login-info  {
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.login-info .login {
  font-size: 36rpx;
}
.login-info .phone{
  font-size: 28rpx;
  
}
.phone image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}
.arrow-icon image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top:30rpx;
}